package practicles;

import java.util.Scanner;

public class P1q4 {
public static void main(String[] ars){
	System.out.println("Enter the length");
	Scanner sc =new Scanner(System.in);
	int height=sc.nextInt();
	int base=height*2;
	int curRow=0;
	int curCol=0;
	while(curRow<height)
	{
		while(curCol<base)
		{	
			if(curCol==(height-curRow)||curCol==(height+curRow))
			{
			System.out.print("*");
			}
			else{
				System.out.print((curCol==height-1)?"*":" ");		
			}
			curCol++;
		}
		System.out.println("");
		curRow++;
		curCol=0;
	}
}
}
